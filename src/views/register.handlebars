<div class="container">
    <form class="register-form" action="/users/register" method="POST">
        <h2>Registration</h2>

        <div class="form-group">
            <label for="username">Username:</label>
            <input type="username" id="username" name="username" required>
        </div>

        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
        </div>

        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
        </div>

        <div class="form-group">
            <label for="photo">Upload Profile Picture:</label>
            <input type="file" id="photo" name="photo" accept="image/*" class="file-upload">
        </div>

        <button class="btn-login" type="submit">Register</button>
    </form>
</div>