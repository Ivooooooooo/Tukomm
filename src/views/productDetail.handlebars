<div class="product-container">
    <div class="product-image">
        <img src="{{data.photo}}" alt="{{data.title}}" 
        onerror="this.onerror=null; this.src='https://mirrors.ctan.org/macros/latex/contrib/incgraph/example.jpg';">
    </div>
    <div class="product-details">
        <h3 class="product-title-detail">{{data.title}}</h3>
        <hr>
        <p class="product-price-detail">${{data.price}}</p>
        <hr>
        <p class="product-category-detail">Category: {{data.category}}</p>
        <p class="product-stock-detail">Stock: {{data.stock}}</p>
    </div>
</div>